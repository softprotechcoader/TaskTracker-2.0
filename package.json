{
  "name": "task-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "A task tracking application for managing daily tasks",
  "author": "Task Tracker Team",
  "main": "electron/main.js",
  "scripts": {
    "start": "$env:PORT=3001 && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run start\"",
    "setup": "npm install",
    "electron:dev": "concurrently \"$env:BROWSER='none' && npm start\" \"wait-on http://localhost:3001 && electron .\"",
    "prepare-electron": "node fix-electron-build.js",
    "electron:build": "npm run build && npm run prepare-electron && npx electron-builder --config electron-builder.js",
    "electron:start": "electron .",
    "create-installer": "powershell -ExecutionPolicy Bypass -File create-installer.ps1",
    "build:all": "npm run build && npm run create-installer",
    "build:installer": "powershell -ExecutionPolicy Bypass -File build-installer.ps1"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "@mui/x-date-pickers": "^6.4.0",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "exceljs": "^4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.29",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "typescript": "^4.9.5",
    "wait-on": "^8.0.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
